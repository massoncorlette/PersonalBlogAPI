<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <body>
    <% if (locals.user) {%>
      <%- include('home.ejs') %>
    <% } else { %>
      <div id="loginContainer">
  
        <h1>please log in</h1>
        <% if (locals.errors) {%>
          <ul>
            <% errors.forEach(function(error) { %>
              <li><%= error.msg %></li>
            <% }); %>
          </ul>
        <% } %>
      <form action="/" method="POST">
        <fieldset>
          <div id="formHeaderContainer">
            <legend>Login</legend>
          </div>
          <div class="loginRow">      
            <input id="username" type="text"  name="username" placeholder="Enter Email"><br>
          </div>
          <div class="loginRow">      
            <input id="password" type="password"  name="password" placeholder="Enter Password"><br>
          </div>
          <div id="submitLogin">
            <button type="submit">Login</button>
          </div>
        </fieldset>
      </form>
      <a href="/sign-up"> 
        <button> Sign Up !</button>
      </a>
      <% } %>
    </div>
</body>
</html>